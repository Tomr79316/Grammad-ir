stresstest : FORCE
	@mv stress.out stress.out.ok
	@mv stress.err stress.err.ok
	@./stress
	@if diff stress.err.ok stress.err && diff stress.out.ok stress.out; then $(ECHO) "OK."; rm -f *.ok; else $(ECHO) "Problem."; fi

