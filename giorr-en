#!/bin/bash
sed "
s/\([^${1}][${1}]\)\([.?!]\)/\1\\\\\2/g
s/\([^${1}]I\)\\\\\([.?!]\)/\1\2/g
s/\([^${1}]Apr\)\./\1\\\./g
s/\([^${1}]Aug\)\./\1\\\./g
s/\([^${1}]c[cf]\)\./\1\\\./g
s/\([^${1}]Dec\)\./\1\\\./g
s/\([^${1}]Dr\)\./\1\\\./g
s/\([^${1}]etc\)\./\1\\\./g
s/\([^${1}]Feb\)\./\1\\\./g
s/\([^${1}]Fig\)\./\1\\\./g
s/\([^${1}]Fr\)\./\1\\\./g
s/\([^${1}]Hon\)\./\1\\\./g
s/\([^${1}]ibid\)\./\1\\\./g
s/\([^${1}]Inc\)\./\1\\\./g
s/\([^${1}]Jan\)\./\1\\\./g
s/\([^${1}]Ju[ln]\)\./\1\\\./g
s/\([^${1}]Jr\)\./\1\\\./g
s/\([^${1}]loc\)\./\1\\\./g
s/\([^${1}]Ltd\)\./\1\\\./g
s/\([^${1}]Mar\)\./\1\\\./g
s/\([^${1}]M[rsS]\)\./\1\\\./g
s/\([^${1}]Mrs\)\./\1\\\./g
s/\([^${1}][Nn]o\)\./\1\\\./g
s/\([^${1}]Nov\)\./\1\\\./g
s/\([^${1}]Oct\)\./\1\\\./g
s/\([^${1}]op\)\./\1\\\./g
s/\([^${1}]pp\)\./\1\\\./g
s/\([^${1}]Prof\)\./\1\\\./g
s/\([^${1}]S[crt]\)\./\1\\\./g
s/\([^${1}]Sept\)\./\1\\\./g
s/\([^${1}]sq\)\./\1\\\./g
s/\([^${1}]vs\)\./\1\\\./g
"
