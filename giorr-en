#!/usr/bin/perl
my $charset = $ARGV[0];
shift;
while (<>) {
	s/([^$charset][$charset])([.?!])/$1\\$2/g;
	s/([^$charset]I)\\([.?!])/$1$2/g;
	s/([^$charset]Apr)\./$1\\./g;
	s/([^$charset]Aug)\./$1\\./g;
	s/([^$charset]c[cf])\./$1\\./g;
	s/([^$charset]Dec)\./$1\\./g;
	s/([^$charset]Dr)\./$1\\./g;
	s/([^$charset]etc)\./$1\\./g;
	s/([^$charset]Feb)\./$1\\./g;
	s/([^$charset]Fig)\./$1\\./g;
	s/([^$charset]Fr)\./$1\\./g;
	s/([^$charset]Hon)\./$1\\./g;
	s/([^$charset]ibid)\./$1\\./g;
	s/([^$charset]Inc)\./$1\\./g;
	s/([^$charset]Jan)\./$1\\./g;
	s/([^$charset]Ju[ln])\./$1\\./g;
	s/([^$charset]Jr)\./$1\\./g;
	s/([^$charset]loc)\./$1\\./g;
	s/([^$charset]Ltd)\./$1\\./g;
	s/([^$charset]Mar)\./$1\\./g;
	s/([^$charset]M[rsS])\./$1\\./g;
	s/([^$charset]Mrs)\./$1\\./g;
	s/([^$charset][Nn]o)\./$1\\./g;
	s/([^$charset]Nov)\./$1\\./g;
	s/([^$charset]Oct)\./$1\\./g;
	s/([^$charset]op)\./$1\\./g;
	s/([^$charset]pp)\./$1\\./g;
	s/([^$charset]Prof)\./$1\\./g;
	s/([^$charset]S[crt])\./$1\\./g;
	s/([^$charset]Sept)\./$1\\./g;
	s/([^$charset]sq)\./$1\\./g;
	s/([^$charset]vs)\./$1\\./g;
	print;
}
exit;
