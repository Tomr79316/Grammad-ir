#!/bin/bash
##  2grgr = "two-gram grep"
##  Usage:  2grgr TAG1 TAG2
##   outputs all instances in tcglob.xml 
##   where the tags appear consecutively with only an intervening space
## tcglob is generated by the script ./tag2grams
#echo "arg1=${1}, arg2=${2}"
egrep -o "${1}[^<]*</[A-Z]> ${2}[^<]*</[A-Z]>" ${HOME}/gaeilge/gramadoir/tastail/tcglob.xml
