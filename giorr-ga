#!/usr/bin/perl
my $charset = $ARGV[0];
shift;
while (<>) {
	s/([^$charset][$charset])([.?!])/$1\\$2/g;
	s/([^$charset][éí])\\([.?!])/$1$2/g;
	s/([^$charset]Aib)\./$1\\./g;
	s/([^$charset]Ath)\./$1\\./g;
	s/([^$charset]Beal)\./$1\\./g;
	s/([^$charset]bl)\./$1\\./g;
	s/([^$charset]B[nr])\./$1\\./g;
	s/([^$charset][Cc]aib)\./$1\\./g;
	s/([^$charset]c[cf])\./$1\\./g;
	s/([^$charset]C[dho])\./$1\\./g;
	s/([^$charset]Cho)\./$1\\./g;
	s/([^$charset]cit)\./$1\\./g;
	s/([^$charset]Dr)\./$1\\./g;
	s/([^$charset]Ea[gn])\./$1\\./g;
	s/([^$charset]etc)\./$1\\./g;
	s/([^$charset]Feabh)\./$1\\./g;
	s/([^$charset]Fig)\./$1\\./g;
	s/([^$charset]Fómh)\./$1\\./g;
	s/([^$charset]Fr)\./$1\\./g;
	s/([^$charset]gCo)\./$1\\./g;
	s/([^$charset]hor)\./$1\\./g;
	s/([^$charset][Ii]bid)\./$1\\./g;
	s/([^$charset][Ii]ml)\./$1\\./g;
	s/([^$charset]Inc)\./$1\\./g;
	s/([^$charset]Íocht)\./$1\\./g;
	s/([^$charset]Jr)\./$1\\./g;
	s/([^$charset][Ll][cg]h)\./$1\\./g;
	s/([^$charset]Ltd)\./$1\\./g;
	s/([^$charset]Lún)\./$1\\./g;
	s/([^$charset]Már)\./$1\\./g;
	s/([^$charset]Meith)\./$1\\./g;
	s/([^$charset]M[rs])\./$1\\./g;
	s/([^$charset]Mrs)\./$1\\./g;
	s/([^$charset][Nn]o)\./$1\\./g;
	s/([^$charset]Noll)\./$1\\./g;
	s/([^$charset]op)\./$1\\./g;
	s/([^$charset]pp)\./$1\\./g;
	s/([^$charset]rl)\./$1\\./g;
	s/([^$charset]Samh)\./$1\\./g;
	s/([^$charset]sbh)\./$1\\./g;
	s/([^$charset]S[crt])\./$1\\./g;
	s/([^$charset][Ss][hpq])\./$1\\./g;
	s/([^$charset]srl)\./$1\\./g;
	s/([^$charset]taesp)\./$1\\./g;
	s/([^$charset]tAth)\./$1\\./g;
	s/([^$charset]teil)\./$1\\./g;
	s/([^$charset]Teo)\./$1\\./g;
	s/([^$charset]tr)\./$1\\./g;
	s/([^$charset]tSr)\./$1\\./g;
	s/([^$charset]tUas)\./$1\\./g;
	s/([^$charset]Uas)\./$1\\./g;
	s/([^$charset][Uu]imh)\./$1\\./g;
	print;
}
exit;
